<% include ../partials/header %>

<div class='container'>
    
    <header class='jumbotron'>
        <div class='container'>
            <h1>Welcome to YelpCamp</h1>
            <p>View our hand picked campgrounds from all over the world!</p>
            <p>
                <a class='btn btn-primary btn-large' href='/campgrounds/new'>Add New Campground</a>
            </p>
        </div>
    </header>
    
    <div class='row'>
        <div class='col-lg-12 text-center'>
            <% if(noMatch){ %>
                <h3><%= noMatch %></h3>
                <p>
                <form action='/campgrounds' method='GET' class='form-inline'>
                    <div class='form-group'>
                        <input class='form-control' type='text' name='search' placeholder='Campground search...'>
                        <input id='btn-spacer' type='submit' value='Search' class='btn btn-light'>
                    </div>
                </form>
            </p>
            <% } %>
        </div>
    </div>
    
    <hr>
    
    <div class='row'>
    
        <% campgrounds.forEach(function(campground){ %>
            <div class='col-sm-6 col-md-4 col-lg-3'>
                <div class='card' style='margin-bottom: 20px;'>
                    <img class='card-img-top' src='<%= campground.image %>'>
                    <div class='card-body text-center'>
                        <h5 class='card-text'><%= campground.name %></h5> 
                        <a class='btn btn-primary' href='/campgrounds/<%= campground._id %>'>More info</a>
                    </div>
                </div>
            </div>
            
        <% }) %>
    
    </div>

</div>

<% include ../partials/footer %>