<% include ../partials/header %>

<div class='container'>
    <div class='row' style='display: flex; flex-direction: column;'>
            <h1 style='text-align: center;'>Add New Comment to <%= campground.name %></h1>
            <div style='width: 35%; margin: 30px auto;'>
                <form action='/campgrounds/<%= campground._id %>/comments' method='POST'>
                    <div class='form-group'>
                        <input class='form-control' type='text' name='comment[text]' placeholder='Add comment...' required>
                    </div>
                    <div class='form-group'>
                        <button class='btn bnt-lg btn-primary btn-block'>Submit!</button>
                    </div>    
                </form>
                
                <a href='/campgrounds/<%= campground._id %>'>Go Back</a>
            </div>
    </div>
</div>

